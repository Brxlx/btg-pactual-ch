generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Order {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  orderId    BigInt
  customerId BigInt
  total      Float    @default(0.0)
  items      Json     @db.Json
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([orderId])
  @@index([customerId])
  @@map("orders")
}
